<%- include('partials/header') -%>


<div class="bg-indigo-50">
  <div class="mx-auto max-w-6xl px-6 lg:px-8 pt-12 pb-14 sm:py-12 md:py-10 lg:py-8 flex items-center justify-between">
    <div class="font-semibold">
      <span class="block text-sm md:text-lg lg:text-xl ">Hi <%= user.firstName %>,</span>
      <span class="block text-2xl md:text-3xl lg:text-4xl">Good Morning!</span>
    </div>
    <div class="flex">
      <div class="md:ml-3 inline-flex rounded-md shadow">
        <a href="/profile" class="flex items-center justify-center rounded-lg border border-indigo-100 bg-white px-3 py-2 text-xs sm:text-sm md:text-base font-medium text-indigo-600 hover:bg-indigo-50">Back to Profile</a>
      </div>
    </div>
  </div>

  <!-- start of feed -->
  <div class="mx-auto max-w-6xl px-6 lg:px-8 py-8">
    <!-- grid -->
    <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 md:grid-cols-2 xl:gap-x-8">
      <!-- showing of posts aka calls -->    
      <div class="group relative">
        <div class="relative group-hover:cursor-crosshair group-hover:opacity-80 aspect-w-1 aspect-h-1 w-full rounded-lg px-4 py-3 overflow-hidden bg-base-100 shadow-xl">       
          <!-- can add google maps location at here above description -->
          <div class="">
            <!-- name and button -->
            <div class="mb-4">
              <h1 class="text-gray-900 font-medium text-xl md:text-2xl">Dhananjay Mandal</h1>
              <!-- possible button to update record -->
            </div>
            <!-- details of the householder -->
            <div class="flex flex-col space-y-3 mb-4">
              <!-- upper | nationality and location in our territory -->
              <div class="flex border-solid">
                <span class="items-center text-sm md:text-base font-medium mr-4">
                  <i class="fa-solid fa-language mr-2"></i>Nepali
                </span>
                <!-- <span class="flex items-center">
                  <span class="border-l-2 border-gray-500 h-3"></span>
                </span> -->
                <span class="items-center text-sm md:text-base font-medium ml-4">
                  <i class="fa-solid fa-location-dot mr-2"></i>Amado
                </span>
              </div>
              <!-- bottom | status as a call -->
              <div class="border-solid">
                <ul class="outline-0 flex flex-wrap">
                  <li class="flex items-center justify-center rounded-full border border-indigo-100 bg-black px-3.5 py-1.5 mr-0.5 mb-0.5 text-xs md:text-sm text-white font-normal">Bible Study</li>
                  <li class="flex items-center justify-center rounded-full border border-indigo-100 bg-black px-3.5 py-1.5 mr-0.5 mb-0.5 text-xs md:text-sm text-white font-normal">English Dependent</li>
                  <li class="flex items-center justify-center rounded-full border border-indigo-100 bg-black px-3.5 py-1.5 mr-0.5 mb-0.5 text-xs md:text-sm text-white font-normal">Attending Meetings</li>
                </ul>
              </div>
            </div>

            <!-- last updated -->
            <div class="border-t border-gray-300">
              <span class="text-gray-600 text-xs md:text-sm font-medium space-x-2"><i class="fa-regular fa-clock mr-1 md:mt-2.5 mb-2"></i> updated 2 days ago</span>
            </div>
          </div>
        </div>
      </div>

      <div class="group relative">
