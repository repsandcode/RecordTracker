              <h1 class="text-gray-900 text-xl font-medium">Dhananjay Mandal</h1>
              <!-- possible button to update record -->
            </div>

            <!-- details of the householder -->
            <div class="flex justify-between">
              <!-- left side -->
              <div class="border-solid border-2 border-sky-500">
                <span class="block">Nepali</span>
                <span class="block">Amado</span>
              </div>

              <!-- right side -->
              <div class="border-solid border-2 border-red-500">
                <ul class="outline-0 flex flex-wrap flex-row-reverse">
                  <li class="flex items-center justify-center rounded-full border border-indigo-100 bg-black px-2 py-1 text-sm text-white font-medium">Bible Study</li>
                  <li class="flex items-center justify-center rounded-full border border-indigo-100 bg-black px-2 py-1 text-sm text-white font-medium">English Dependent</li>
