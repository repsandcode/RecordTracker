<%- include('partials/header') -%>

<div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
  <!-- step 1 -->
  <div class="mt-8">
    <div class="">
      <label for="first-name" class="block text-sm font-medium text-gray-700">Complete name</label>
      <input type="text" name="first-name" id="first-name" autocomplete="given-name" class="form-input ">
    </div>
  
    <div class="">
      <label for="last-name" class="block text-sm font-medium text-gray-700">Gender</label>
      <input type="text" name="last-name" id="last-name" autocomplete="family-name" class="form-input ">
    </div>
  
    <div class="">
      <label for="last-name" class="block text-sm font-medium text-gray-700">Nationality</label>
      <input type="text" name="last-name" id="last-name" autocomplete="family-name" class="form-input ">
    </div>
  
    <div class="">
      <label for="last-name" class="block text-sm font-medium text-gray-700">Email address</label>
      <input type="text" name="last-name" id="last-name" autocomplete="family-name" class="form-input ">
    </div>
  
    <div class="">
      <label for="last-name" class="block text-sm font-medium text-gray-700">Telephone number</label>
      <input type="text" name="last-name" id="last-name" autocomplete="family-name" class="form-input ">
    </div>
  
    <div class="">
      <label for="last-name" class="block text-sm font-medium text-gray-700">Social Media Link</label>
      <input type="text" name="last-name" id="last-name" autocomplete="family-name" class="form-input ">
    </div>
  </div>

  <!-- step 2 -->
  <div class="mt-8">
    <div class="">
      <label for="first-name" class="block text-sm font-medium text-gray-700">Initial Call Setting</label>
      <input type="text" name="first-name" id="first-name" autocomplete="given-name" class="form-input ">
    </div>
  
    <div class="">
      <label for="last-name" class="block text-sm font-medium text-gray-700">Area</label>
      <input type="text" name="last-name" id="last-name" autocomplete="" class="form-input ">
    </div>
  
    <div class="">
      <label for="house-address" class="block text-sm font-medium text-gray-700">House Address</label>
      <input type="text" name="house-address" id="house-address" autocomplete="house-address" class="form-input ">
    </div>
  
    <div class="">
      <label for="landmark" class="block text-sm font-medium text-gray-700">LandMark</label>
      <input type="text" name="landmark" id="landmark" class="form-input ">
    </div>
  </div>



  <!-- step 3 -->
  <div class="mt-8">
    <div class="">
      <label for="publisher" class="block text-sm font-medium text-gray-700">Publisher</label>
      <select name="publisher" id="publisher" class="form-select ">
        <option value="Albert Jonathan Borja">AJ Borja</option>
        <option value="Albert Jonathan Borja">AJ Borja</option>
        <option value="Albert Jonathan Borja">AJ Borja</option>
      </select>
    </div>
  
    <div class="">
      <label for="comments" class="block text-sm font-medium text-gray-700">Comments</label>
      <textarea name="comments" id="comments" class="form-textarea "></textarea>
    </div>
  
    <div class="">
      <label for="publication" class="block text-sm font-medium text-gray-700">Publication</label>
      <input type="text" name="publication" id="publication" autocomplete="publication" class="form-input ">
    </div>
  
    <div class="">
      <label for="status" class="block text-sm font-medium text-gray-700">Status</label>
      <select name="status" id="status" required class="form-select ">
        <option value="Initial Call">Initial Call</option>
        <option value="Return Visit">Return Visit</option>
        <option value="Bible Study">Bible Study</option>
        <option value="Not Interested">Not Interested</option>
        <option value="Do Not Call">Do Not Call</option>
        <option value="Not in Territory">Not in Territory</option>
      </select>
    </div>
  
    <div class="">
      <label for="english-dependent" class="block text-sm font-medium text-gray-700">English Dependent</label>
      <select name="english-dependent" id="english-dependent" required class="form-select ">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
    </div>
  
    <div class="">
      <label for="lives-within-pangasinan" class="block text-sm font-medium text-gray-700">Lives Within Pangasinan</label>
      <select name="lives-within-pangasinan" id="lives-within-pangasinan" required class="form-select ">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
    </div>

    <div class="">
      <label for="attending-meetings" class="block text-sm font-medium text-gray-700">Attending Meetings</label>
      <select name="attending-meetings" id="attending-meetings" required class="form-select ">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
    </div>
  </div>

</div>

<%- include('partials/footer') -%>